   A   
  ABA  
 ABCBA 
ABCDCBA
public static void Pattern19()
	{
		char k;
		for(int i=1;i<=4;i++)
		{
			k='A';
			for(int j=1;j<=7;j++)
			{
				if(j>=(5-i)&&j<=(3+i))
				{
					System.out.print(k);
					k+=j<4?1:-1;
					
				}else
				{
					System.out.print(" ");
				}
				}
			System.out.println();
		}
	}
